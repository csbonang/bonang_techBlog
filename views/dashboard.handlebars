<div class="row">
  <div class="col-auto">
    {{!-- <h2>Welcome, {{name}}!</h2> --}}
    <h2>Welcome to Dashboard</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New blog post:</h3>

    <form class="form new-blogposts-form">
      <div class="form-group">
        <label for="blogpost-name">project name:</label>
        <input class="form-input" type="text" id="blogpost-name" name="blogpost-name" />
      </div>
      {{!-- <div class="form-group">
        <label for="project-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="project-funding" name="project-funding" />
      </div> --}}
      <div class="form-group">
        <label for="blogpost-desc">description:</label>
        <textarea class="form-input" id="blogpost-desc" name="blogpost-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogposts.length}}
  <div class="col-md-6 blogposts-list">
    <h3>Current blog posts</h3>

    {{#each blogposts as |blogpost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{title}}</h4>
        <h4>{{description}}</h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blogpost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
